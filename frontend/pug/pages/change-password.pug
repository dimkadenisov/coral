extends ../templates/page
include ../templates/sidebar
include ../templates/sort-block
include ../templates/catalog-layout

block title
  |Сменить пароль
block content
  .container
    .row
      .d-none.d-lg-block.col-3
        +sidebar({separateLink: false, itemsAmount: 10})
      .col-12.col-lg-9
        include ../components/breadcrumbs
        main.main
          h1.section__heading Сменить пароль

          form.registration-form
            .row
              .col-12.col-md-8
                +input-field({type: 'password'})(placeholder="Старый пароль" required)
                +input-field({type: 'password'})(placeholder="Новый пароль" required)
                +input-field({type: 'password'})(placeholder="Повторите пароль" required)

                +button({tag: 'button', color: 'red'})
                  |Изменить пароль
