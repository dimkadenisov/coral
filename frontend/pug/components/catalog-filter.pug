      .filter-row.bx-filter-parameters-box
        .filter-row-caption
          a.filter-row-trigger(href="#")
            span Форма
        .filter-row-fields.bx-filter-block(data-role="bx_filter_block")
          span.bx-filter-container-modef
          .row.bx-filter-parameters-box-container
            .col-12.multiple-columns
              .checkbox
                label.bx-filter-param-label
                  span.bx-filter-input-checkbox
                    input(type="checkbox" onclick="smartFilter.click(this)").visually-hidden
                    span.bx-filter-param-text.field-text(title="Круг") Круг
              .checkbox
                label.bx-filter-param-label
                  span.bx-filter-input-checkbox
                    input(type="checkbox" onclick="smartFilter.click(this)").visually-hidden
                    span.bx-filter-param-text.field-text(title="Квадрат") Квадрат
              .checkbox
                label.bx-filter-param-label
                  span.bx-filter-input-checkbox
                    input(type="checkbox" onclick="smartFilter.click(this)").visually-hidden
                    span.bx-filter-param-text.field-text(title="Овал") Овал

      .submit-row
        .bx-filter-parameters-box-container
          input.button.button_small.button_gray.set-filter-button#set_filter(type="button" name="set_filter" value="Показать")
          input.button.button_small.button_no-bg.button_border-gray.reset-filter-button#del_filter(type="button" name="del_filter" value="Сбросить")
