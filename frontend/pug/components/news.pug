include ../templates/button
include ../templates/news-post

.section.news
  .container
    .row
      .col-12.col-sm-6.col-md-8.col-xl-8.col-xxl-9.order-0
        span.section__heading Новости
      .col-12.col-sm-6.col-md-4.col-xl-4.col-xxl-3.order-10.order-sm-0
        +button({type: 'icon_right', color: 'red', iconId: '#arrow-right', iconBg: 'lighter'})
          |Читать еще
      .col-12.col-sm-6.col-md-4.col-lg-3.col-xl-6
        +news-post({big: true})

      .d-none.d-sm-block.col-12.col-sm-6.col-md-8.col-lg-9.col-xl-6
        .row
          .col-sm-12.col-md-6.col-lg-4.col-xl-6
            +news-post()
          .d-none.d-md-block.col-sm-12.col-md-6.col-lg-4.col-xl-6
            +news-post()
          .d-none.d-lg-block.col-sm-12.col-md-6.col-lg-4.col-xl-6
            +news-post()
          .d-none.d-xl-block.col-sm-12.col-md-6.col-lg-4.col-xl-6
            +news-post()
