mixin series-item(props = 0)
  include sticker

  - const { text = true, sticker = false} = props;

  a(href="assets/img/sample-image-1-630.jpg" data-fancybox="fancybox").series-item
    if sticker
      .stickers
        +sticker({type: `${sticker}`})
    .catalog-item__image-wrapper
      img(src="assets/img/sample-image-1-288.jpg", alt="Изображение товара" data-object-fit="cover").catalog-item__image
    if text
      b.series-item__text Снежная королева
